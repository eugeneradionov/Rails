<p id="notice"><%= notice %></p>

<div class="show">
  <h1>
    <%= @article.title %>
  </h1>

  <p class="article_text">
    <%= @article.text %>
  </p>

  <% if @article.comments.any? %>
    <h3>Comments</h3>
    <div class="comment">
      <%= render @article.comments %>
    </div>
  <% end %>

  <h3>Add a comment</h3>
  <div class="new_comment">
    <%= render 'comments/form' %>
  </div>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
</div>
